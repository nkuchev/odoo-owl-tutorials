<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.Card" owl="1">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <t t-if="props.slots['title']">
                    <h5 class="card-title">
                        <t t-slot="title"/>
                    </h5>
                </t>
                <t t-slot="default"/>
            </div>
        </div>
    </t>
</templates>
